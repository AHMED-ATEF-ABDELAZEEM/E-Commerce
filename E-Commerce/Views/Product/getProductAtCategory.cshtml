@using E_Commerce.ViewModel
@model ShowProductAtPadgeVM



<style>
        table {
            width: 100%;
            text-align: center;
            border: none;
            outline: none;
            border-collapse: collapse;
        }

        thead th {
            font-weight: bold;
            font-size: 20px;
            margin-top: 10px;
            padding: 15px 0;
        }

        table td {
            margin-top: 10px;
            padding: 15px 0;
            font-weight: 600;
        }

        .descriptionHeader {
            width: 25%;
        }

        .description {
            width: 25%;
            font-size: 14px;
        }

        tbody tr:hover {
            background-color: #e6f7ff;
        }

    .btn {
        display: inline-block;
        background-color: rgba(140, 51, 255, 1);
        padding: 5px 15px;
        border-radius: 5px;
        color: white;
        transition: .5s;
        font-weight: bold;
        text-decoration: none;
    }

        .btn:hover {
            cursor: pointer;
            opacity: .8;
            transform: scale(1.2);
        }

    #add {
        display: block;
        width: 150px;
        text-decoration: none;
        background-color: rgba(140, 51, 255, 1);
        padding: 7px 15px;
        border-radius: 5px;
        border: none;
        outline: none;
        color: white;
        transition: .8s;
        font-size: 18px;
        font-weight: bold;
        margin: 10px 0px 20px 40px;
    }

        #add:hover {
            cursor: pointer;
            opacity: .8;
            transform: scale(1.1);
        }

    h2 {
        text-align: center;
        margin: 10px 0;
    }

    .parent {
        margin: 20px auto;
        text-align: center;
    }

        .parent a {
            text-decoration: none;
            padding: 8px 16px;
            font-weight: bold;
            background-color: burlywood;
            color: white;
            border-radius: 8px;
            margin: 0px 10px;
        }

    .active {
        color: black;
        opacity: .5;
        cursor: not-allowed;
    }

    .Operation {
        display: flex;
        justify-content: space-between;
    }

    .filter-container {
        display: flex;
        align-items: center;
        gap: 10px; /* Space between elements */
        padding: 10px;
        background-color: #f8f9fa; /* Light background */
        border-radius: 8px;
        margin-right: 20px;
    }

    .filter-label {
        font-weight: bold;
        color: #333;
    }

    .filter-dropdown {
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 5px;
        width: 200px;
        cursor: pointer;
    }

    .filter-button {
        padding: 8px 15px;
        border-radius: 5px;
        text-decoration: none;
        transition: 0.5s;
    }

        .filter-button:hover {
            background-color: #0056b3;
        }
</style>


<div id="container">

    <div class="Operation">
        <a id="add" asp-action="AddNewProduct" asp-controller="Product">Add New Product</a>

        <div class="filter-container">
        <label for="categorySelect" class="filter-label">Category</label>
        <select id="categorySelect" name="category" class="form-select filter-dropdown">
                @foreach (var category in Model.CategoryDropdownList)
                {
                    if(Model.Category == category.Name)
                    {
                        <option value="@category.Name" selected>@category.Name</option>
                    }
                    else
                    {
                        <option value="@category.Name">@category.Name</option>
                    }
                }
            </select>
        <a href="#" id="filterLink" class="btn btn-primary filter-button">Filter</a>
        </div>
        <script>
            document.getElementById("filterLink").addEventListener("click", function () {
                var Category = document.getElementById("categorySelect").value;
                window.location.href = '/Product/getProductAtCategory?Category=' + Category;
            });
        </script>
    </div>

    @if (Model.Products.Count != 0)
    {
        <table>
            <thead>
                <tr>
                    <th></th>
                    <th>Product</th>
@*                     <th class="descriptionHeader">Description</th> *@
                    <th>Amount</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Information</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            @{
                int start = ((Model.CurrentPadge - 1) * Model.PadgeSize) + 1;
            }
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@start</td>
                    <td>@product.Name</td>
@*                     <td class="description">@product.Description</td> *@
                    <td>@product.Amount</td>
                    <td>@product.Price</td>
                    <td>@product.Category</td>
                    <td><a class="btn" asp-action="getProductInformation" asp-route-id="@product.Id" asp-route-PadgeNumber="@Model.CurrentPadge" asp-route-Category="@Model.Category">Information</a></td>
                    <td><a class="btn" asp-action="UpdateProduct" asp-route-id="@product.Id" asp-route-PadgeNumber="@Model.CurrentPadge" asp-route-Category="@Model.Category">Update</a></td>
                    <td><a class="btn" asp-action="DeleteProduct" asp-route-id="@product.Id" asp-route-PadgeNumber="@Model.CurrentPadge" asp-route-Category="@Model.Category">Delete</a></td>
                </tr>
                start++;
            }
        </table>
    }

    else
    {
        <h2 class="Message">No Product At This Category</h2>
    }

    <h2>@Model.CurrentPadge</h2>
    <div class="parent">
        @if (Model.CountOfPadge > 1)
        {
            for (int i = 1; i <= Model.CountOfPadge; i++)
            {
                if (Model.CurrentPadge == i)
                {
                    <a class="active">@i</a>
                }
                else
                {
                    <a asp-action="getProductAtCategory" asp-route-Category="@Model.Category" asp-route-padgeNumber="@i">@i</a>
                }
            }
        }
    </div>
</div>


