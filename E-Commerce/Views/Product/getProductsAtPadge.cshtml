@using E_Commerce.ViewModel
@model ShowProductAtPadgeVM

<style>
    table {
        width: 100%;
        text-align: center;
        border: none;
        outline: none;
        border-collapse: collapse;
    }

    thead th {
        font-weight: bold;
        font-size: 20px;
        margin-top: 10px;
        padding: 15px 0;
    }

    table td {
        margin-top: 10px;
        padding: 15px 0;
        font-weight: 600;
    }

    .descriptionHeader {
        width: 25%;
    }

    .description {
        width: 25%;
        font-size: 14px;
    }

    tbody tr:hover {
        background-color: #e6f7ff;
    }

    .btn {
        display: inline-block;
        background-color: rgba(140, 51, 255, 1);
        padding: 5px 15px;
        border-radius: 5px;
        color: white;
        transition: .5s;
        font-weight: bold;
        text-decoration: none;
    }

        .btn:hover {
            cursor: pointer;
            opacity: .8;
            transform: scale(1.2);
        }

    #add {
        display: block;
        width: 150px;
        text-decoration: none;
        background-color: rgba(140, 51, 255, 1);
        padding: 7px 15px;
        border-radius: 5px;
        border: none;
        outline: none;
        color: white;
        transition: .8s;
        font-size: 18px;
        font-weight: bold;
        margin: 10px 0px 20px 40px;
    }

        #add:hover {
            cursor: pointer;
            opacity: .8;
            transform: scale(1.1);
        }
    h2{
        text-align:center;
        margin:10px 0;
    }
    .parent {
        margin:20px auto;
        text-align:center;
    }
    .parent a{
        text-decoration:none;
        padding:8px 16px;
        font-weight:bold;
        background-color:burlywood;
        color:white;
        border-radius:8px;
        margin:0px 10px;
    }

    .active{
        color:black;
        opacity:.5;
        cursor:not-allowed;
    }

</style>


<div id="container">
    <table>
        <thead>
            <tr>
                <th></th>
                <th>Product</th>
                <th class="descriptionHeader">Description</th>
                <th>Amount</th>
                <th>Price</th>
                <th>Category</th>
                <th>Information</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        @{
            int start = ((Model.CurrentPadge - 1) * Model.PadgeSize) + 1;
        }
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@start</td>
                <td>@product.Name</td>
                <td class="description">@product.Description</td>
                <td>@product.Amount</td>
                <td>@product.Price</td>
                <td>@product.Category</td>
                <td><a class="btn" asp-action="getProductInformation" asp-route-id="@product.Id" asp-route-PadgeNumber="@Model.CurrentPadge">Information</a></td>
                <td><a class="btn" asp-action="UpdateProduct" asp-route-id="@product.Id" asp-route-PadgeNumber="@Model.CurrentPadge">Update</a></td>
                <td><a class="btn" asp-action="DeleteProduct" asp-route-id="@product.Id" asp-route-PadgeNumber="@Model.CurrentPadge">Delete</a></td>
            </tr>
            start++;
        }
    </table>
    <h2>@Model.CurrentPadge</h2>
    <div class="parent">
        @if(Model.CountOfPadge > 1)
        {
            for(int i = 1; i <= Model.CountOfPadge; i++)
            {
                if(Model.CurrentPadge == i)
                {
                    <a class="active">@i</a>
                }
                else
                {
                    <a asp-action="getProductsAtPadge" asp-route-padgeNumber="@i">@i</a>
                }
            }
        }
    </div>
    <a id="add" asp-action="AddNewProduct" asp-route-PadgeNumber="@Model.CurrentPadge" asp-controller="Product">Add New Product</a>
</div>









