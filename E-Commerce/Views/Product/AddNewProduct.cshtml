@model E_Commerce.ViewModel.CreateProductVM


@{
    SelectList CategoryDropdown = new (Model.CategoryDropdownList, "CategoryId", "Name" );
}


<style>
    .form {
        width: 350px;
        padding: 20px;
        background-color: gray;
        border-radius: 10px;
        margin: 1rem auto;
        opacity: .7;
    }

    .form-group input {
        background-color: rgba(246, 245, 245, 1);
        border: none;
        outline: none;
        padding: 10px 15px;
        border-radius: 10px;
        transition: 1s;
        margin: 10px auto;
        width: 85%;
        font-size: 20px;
    }

    .form label {
        font-weight: bold;
        display: block;
    }


    .form input:hover {
        transform: scale(1.05);
    }

    .form h2 {
        text-align: center;
        margin-bottom: 20px;
    }

    .form-group {
        margin: 10px 0;
    }
    .form-group select{
            background-color: rgba(246, 245, 245, 1);
            border: none;
            outline: none;
            padding: 10px 15px;
            border-radius: 10px;
            transition: 1s;
            margin: 10px auto;
            width: 93%;
            font-size: 20px;
    }

    .buttons {
        display: flex;
        justify-content: space-between;
        margin-top: 30px;
    }

        .buttons .btn {
            display: inline-block;
            padding: 8px 16px;
            border: none;
            outline: none;
            background-color: rgba(140, 51, 255, 1);
            margin: 0 10px;
        }

    .text-danger {
        color: red;
        font-size: 15px;
    }
</style>


<div id="container">
    <div class="form">
        <h2>Add New Category</h2>
        <form  asp-action="AddNewProduct" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
           
            <input name="padgeNumber" value="@ViewBag.padgeNumber" hidden />

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
@*             <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" type="file" enctype="multipart/form-data" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">Choose Category</label>
                <select asp-for="CategoryId" asp-items="CategoryDropdown"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="buttons">
                <a class="btn" asp-action="getProductsAtPadge" asp-route-padgeNumber="@ViewBag.padgeNumber">Back</a>
                <input class="btn" id="submitbutton" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
