

@{
    var WishlistCount = Context.Session.GetInt32("WishlistCount");
    var CartCount = Context.Session.GetInt32("CartCount");
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @*  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/getAllCategory.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/AddNewCategory.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/E_Commerce.styles.css" asp-append-version="true" /> *@

</head>
<body>
    <div class="Header">
        <h2>E-Commerce</h2>
        <div class="Nav">
            <a asp-action="Index" asp-controller="Home">Home</a>
            <a asp-action="getAllCategory" asp-controller="Category">Category</a>
            <a asp-action="getProductsAtPadge" asp-route-padgeNumber="1" asp-route-Category="All" asp-controller="Product">Product</a>

            <!-- Wishlist -->
            <a asp-action="getUserWishlist" asp-controller="Wishlist" class="position-relative">
                Wishlist
                @if(User.Identity.IsAuthenticated)
                {
                    <span id="wishlistCount" class="count-badge">@WishlistCount</span>
                }
            </a>

            <!-- Cart -->
            <a asp-action="getUserCart" asp-controller="Cart" class="position-relative">
                Cart
                @if (User.Identity.IsAuthenticated)
                {
                    <span id="cartCount" class="count-badge">@CartCount</span>
                }
            </a>

            @if (User.Identity.IsAuthenticated)
            {
                <a asp-action="Logout" asp-controller="Account">Logout</a>
                <a asp-action="getAllCategory" asp-controller="Category">@User.Identity.Name</a>
            }
            else
            {
                <a asp-action="Register" asp-controller="Account">Register</a>
                <a asp-action="LogIn" asp-controller="Account">LogIn</a>
            }
        </div>

    </div>

    <div class="content">
        @RenderBody()
    </div>

    <div class="footer">
        <h3>E-Commerce</h3>
        <h3>Created By Eng Ahmed Atef</h3>
        <h3>Contact : ahmedatefabdelazeem@gmail.com</h3>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script src="~/js/site.js"></script>

</body>
</html>








