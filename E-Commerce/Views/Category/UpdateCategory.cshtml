@model E_Commerce.ViewModel.UpdateCategoryVM

<style>
    .form {
        width:350px;
        padding:20px;
        background-color:gray;
        border-radius:10px;
        margin:1rem auto;
        opacity:.7;
    }

    .form-group input {
        background-color: rgba(246, 245, 245, 1);
        border:none;
        outline:none;
        padding:10px 15px;
        border-radius:10px;
        transition:1s;
        margin:10px auto;
        width:85%;
        font-size:20px;
    }
    .form label{
        font-weight:bold;
        display:block;
    }
    

            .form input:hover{
                transform:scale(1.1);
            }

    .form h2{
        text-align:center;
        margin-bottom:20px;
    }

    .form-group {
        margin:10px 0;
    }

    .buttons {
        display: flex;
        justify-content: space-between;
        margin-top: 30px;
    }

        .buttons .btn {
            text-decoration: none;
            display: inline-block;
            padding: 10px 20px;
            border: none;
            outline: none;
            background-color: rgba(140, 51, 255, 1);
            margin: 0 10px;
            border-radius: 8px;
            color: white;
            font-weight: bold;
            transition: .5s;
        }

            .buttons .btn:hover {
                cursor: pointer;
                opacity: .9;
                transform: scale(1.1);
            }

    .text-danger{
        color:red;
        font-size:15px;
    }
</style>


<div id="container">
    <div class="form">
        <h2>Update Category</h2>
        <form asp-action="UpdateCategory" asp-controller="Category" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" class="form-control" hidden/>
            </div>
            <div class="form-group">
                <label asp-for="Name" ></label>
                <input asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" ></label>
                <input asp-for="Description"  />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="buttons">
                <a class="btn" asp-action="getAllCategory">Back</a>
                <input class="btn" type="submit" value="Update"/>
            </div>
        </form>
    </div>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}




